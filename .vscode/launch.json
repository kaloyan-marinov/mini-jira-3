{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Node Backend",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "program": "${workspaceFolder}/src/server.js"
    },
    {
      "name": "Nodemon Backend",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"]
    }
  ]
}
